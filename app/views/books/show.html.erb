<main>
    <div class="container px-5 px-sm-0">
        <div class="row">
          <div class="col-md-3">
            <%= render "users/user_info_a", user: @book.user, book: @new_book %>
          </div>
          <div class="col-md-8 offset-md-1">
            <h2>Book detail</h2>
            <table class="table">
              <tbody>
                  <tr>
                    <td>
                      <%= attachment_image_tag @user, :profile_image,format:'jpeg',fallback:"no_image.jpg", size:"40x40" %></br>
                      <%= link_to user_path(@book.user) do %>
                        <%= @book.user.name %>
                      <% end %>
                    </td>
                    <td>
                      <%= link_to book_path(@book) do %>
                        <%= @book.title %>
                      <% end %>                      
                    </td>
                    <td><%= @book.body %></td>
                    <% if user_signed_in? && current_user.id == @book.user_id %>  
                      <td><%= link_to "Edit", edit_book_path(@book),class:"btn btn-success" %></td>
                      <td><%= link_to "Destroy", book_path(@book), method: :delete , class:"btn btn-danger" %></td>   
                    <% else %>
                      <td id="favorite_buttons_<%= @book.id %>">
                       <%= render "favorites/favorites" , book: @book %>
                      </td>                    
                      <td>コメント数:<%= @book.books_comments.count %></td>
                    <% end %>
                  </tr>
              </tbody>
            </table>
            <div id='comments_area'>
              <%= render "books/comment", book: @book ,user: @user %>
            <div>
              <%= render "books/comment_form" ,book: @book, books_comment: @books_comment %>
            </div>            
          </div>
        </div>
    </div>
</main>        