<main>
    <div class="container px-5 px-sm-0">
        <div class="row">
          <div class="col-md-3">
            <%= render "users/user_info_a", user: @book.user, book: @new_book %>
          </div>
          <div class="col-md-8 offset-md-1">
            <h2>Book detail</h2>
            <div id= "book_detail">
              <%= render "books_comments/book_detail", book: @book, user: @user %>
            </div>
            <div id='comments_area'>
              <%= render "books_comments/comment", book: @book ,user: @user %>
            </div>
            <div id="comments_form" >
              <%= render "books_comments/comment_form" ,book: @book, books_comment: @books_comment %>
            </div>  
          </div>
        </div>
    </div>
</main>        