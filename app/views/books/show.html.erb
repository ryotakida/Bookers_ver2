<main>
    <div class="container px-5 px-sm-0">
        <div class="row">
          <div class="col-md-3">
            <%= render "users/user_info_a", user: @user, book: @new_book %>
          </div>
          <div class="col-md-8 offset-md-1">
            <h2>Book detail</h2>
            <table class="table">
              <tbody>
                  <tr>
                    <td>
                      <%= attachment_image_tag @user, :profile_image,format:'jpeg',fallback:"no_image.jpg", size:"40x40" %></br>
                      <%= link_to user_path(@user) do %>
                        <%= @user.name %>
                      <% end %>
                    </td>
                    <td>
                      <%= link_to book_path(@book) do %>
                        <%= @book.title %>
                      <% end %>                      
                    </td>
                    <td><%= @book.body %></td>
                    <% if current_user.id == @book.user_id %>  
                      <td><%= link_to "edit", edit_book_path(@book),class:"btn btn-success" %></td>
                      <td><%= link_to "destroy", book_path(@book), method: :delete , class:"btn btn-danger" %></td>   
                    <% end %>
                  </tr>
              </tbody>
            </table>
          </div>
        </div>
    </div>
</main>        