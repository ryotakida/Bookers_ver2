
<main>
    <div class="container px-5 px-sm-0">
      <% if @book.errors.any? %>
        <h3 class="text-danger"><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
        <ul>     
        <% @book.errors.full_messages.each do |message| %>
          <li class="text-danger"><%= message %></li>
        <% end %>
        </ul>         
      <% end %>        
        <div class="row">
          <div class="col-md-3">
            <%= render "users/user_info", book:@book %>
          </div>
          <div class="col-md-8 offset-md-1">
            <h2>Books</h2>
            <table class="table table-hover table-inverse">
              <thead>
                <tr>
                  <th></th>
                  <th>Title</th>
                  <th>Opinion</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
                <% @books.each do |book| %>  
                    <tr>
                      <th><%= attachment_image_tag book.user, :profile_image, format: 'jpeg', size: "40x40" %></th>
                      <th><%= link_to book_path(book) do %><%= book.title %><% end %></th>
                      <th><%= book.body %></th>
                      <th colspan="3"></th>
                    </tr> 
                <% end %>    
              </tbody>
            </table>
          </div>  
        </div>
    </div>
</main>        