<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>User info</h1>
          <% if @user.errors.any? %>
            <h3 class="text-danger"><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
            <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li class="text-danger"><%= message %></li>
            <% end %>
            </ul>
          <% end %>  
          <%= form_with model:@user, local:true do |f| %>
            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, autofocus: true, id:"inputName", class:"form-control" %>
            </div>  
            <div class="form-group">  
              <%= f.label :image %></br>
              <%= f.attachment_field :profile_image %>
            </div>  
            <div class="form-group">  
              <%= f.label :introduction %>
              <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", class:"form-control" %>
            </div>  
            <div class="form-group">  
              <%= f.submit "Update User" , class:"btn btn-success" %>
            </div>  
          <% end %>

      </div>
    </div>
  </div>
</main>
