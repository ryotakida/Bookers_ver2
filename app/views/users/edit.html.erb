<!DOGTYPE html>
<html>
  <head>
    <title>Bookers2Ver2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/cc6c9ade37.js" crossorigin="anonymous"></script>       
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
      <main>
          <div class="container">
              <div class="row">
                  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
                    <h2>User info</h2>
                      <%= form_with model:@user, local:true do |f| %>
                        <div class="form-group">
                          <%= f.label :name %>
                          <%= f.text_field :name, autofocus: true, id:"inputName", class:"form-control" %>
                        </div>  
                        <div class="form-group">  
                          <%= f.label :image %></br>
                          <%= f.attachment_field :profile_image %>
                        </div>  
                        <div class="form-group">  
                          <%= f.label :introduction %>
                          <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", class:"form-control" %>
                        </div>  
                        <div class="form-group">  
                          <%= f.submit "Update User" %>
                      <% end %>
                  </div>
              </div>
          </div>
      </main>
  </body>    
</html>