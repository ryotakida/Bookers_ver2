
<main>
    <div class="container px-5 px-sm-0">
      <div class="row">
          <div class="col-md-3">
            <%= render "users/user_info_a", user: @user, book: @book %> 
          </div>
          <div class="col-md-8 offset-md-1">
            <h2>Book detail</h2>
            <table class="table table-hover table-inverse">
              <thead>
                <tr>
                  <th></th>
                  <th>Title</th>
                  <th>Opinion</th>
                  <th colspam="3"></th>
                </tr>
              </thead>
              <tbody>
                <% @books.each do |book| %>  
                  <tr>
                    <td>
                      <%= attachment_image_tag book.user, :profile_image,format:'jpeg',fallback:"no_image.jpg", size:"40x40" %>
                    </td>
                    <td>
                      <%= link_to book_path(book) do %>
                        <%= book.title %>
                      <% end %>                      
                    </td>
                    <td><%= book.body %></td>
                    <td></td>
                    <td></td>
                  </tr>                
                <% end %>  
              </tbody>
            </table>
          </div>       
      </div>
    </div>
</main>

