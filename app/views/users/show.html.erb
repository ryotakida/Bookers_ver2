
<main>
    <div class="container px-5 px-sm-0">
      <div class="row">
          <div class="col-md-3">
               <%= render "user_info" %>
          </div>
          <div class="col-md-8 offset-md-1">
            <h2>Books</h2>
            <table class="table table-hover table-inverse">
              <thead>
                <tr>
                  <th></th>
                  <th>Title</th>
                  <th>Opinion</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
                <% @books.each do |book| %>  
                    <tr>
                      <th><%= attachment_image_tag current_user, :profile_image, format: 'jpeg', size: "40x40" %></th>
                      <th><%= link_to book_path(book) do %><%= book.title %><% end %></th>
                      <th><%= book.body %></th>
                      <th colspan="3"></th>
                    </tr> 
                <% end %>    
              </tbody>
            </table>
          </div>          
      </div>
    </div>
</main>

