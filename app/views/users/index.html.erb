<!DOGTYPE html>
<html>
  <head>
    <title>Bookers2Ver2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/cc6c9ade37.js" crossorigin="anonymous"></script>       
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
      <main>
          <div class="container px-5 px-sm-0">
              <div class="row">
                  <div class="col-md-3">
                      <h2>User info</h2>
                        <%= attachment_image_tag @user, :image, format: 'jpeg', size: "100x100" %>
                        <table class="table">
                            <tr>
                                <th>name</th>
                                <th><%= @user.name %></th>
                            </tr>
                            <tr>
                                <th>introduction</th>
                                <th><%= @user.introduction %>r</th>
                            </tr>
                        </table>
                  </div>
              </div>
          </div>
      </main>
  </body>    
</html>