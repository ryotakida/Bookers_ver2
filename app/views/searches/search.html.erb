<% if @range == 'User' %>
      <h2>Users search for #{word}</h2>

      <table class="table">

          <thead>
            <tr>
                <th>image</th>
                <th>name</th>
            </tr>
          </thead>

          <tbody>

            <tr>
            <% @user.each do |user| %>    
                <td>
                 <%= attachment_image_tag user, :profile_image,fallback:"no_image.jpg", format: 'jpeg', size: "40x40" %>
              </td>
              <td><%= user.name %></td>
              <td><%= link_to 'show', user_path(user) %></td>
            <% end %>              
            </tr>
          </tbody>

      </table>

<% else %>

       <h2>Books search for #{word}</h2>

       <table class="table">

         <thead>
            <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
            </tr>
         </thead>

          <tbody>
            <% @book.each do |book| %>
            <tr>
              <td>
                <%= attachment_image_tag book.user, :profile_image,fallback:"no_image.jpg", format: 'jpeg', size: "40x40" %>
              </td>
              <td><%= link_to book_path(book) , book.user.title %></td>
              <td><%= book.user.body %></td>
            </tr>
            <% end %>
          </tbody>

       </table>

<% end %>            