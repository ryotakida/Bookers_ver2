<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2Ver2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/cc6c9ade37.js" crossorigin="anonymous"></script>       
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navi">
        <div class="container">
          <a class="navi-title"href="/">Bookers</a>
         <% if user_signed_in? %>
          <ul class="navi-ul ml-auto">
            <li>
              <%= link_to "Home", user_path(current_user),class:"link fas fa-home" %><!--user_path(@user.id)--->
            </li>
            <li>
              <%= link_to "Users", users_path,class:"link" %>
            </li>
            <li>
              <%= link_to "Books", books_path,class:"link" %>
            </li>
            <li>
              <%= link_to "logaut", destroy_user_session_path,class:"link", method: :delete %>
            </li>
          </ul>
         <% else %>
          <ul class="navi-ul ml-auto">
            <li>
              <%= link_to "Home", root_path,class:"link" %>
            </li>
            <li>
              <%= link_to "About", about_path, class:"link" %>
            </li>
            <li>
              <%= link_to "sign up", new_user_registration_path, class:"link" %>
            </li>
            <li>
              <%= link_to "login", new_user_session_path,class:"link" %>
            </li>
          </ul>
         <% end %>
        </div>
      </nav>
    </header>     
    <div class="container content">
      <%= yield %>
    </div>
    <div class="footer">
      <div class="container">
        <div class="row">
          <div class="last">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
